%h1.title TASK LIST
%table
  %thead
    %tr
      %th
        STATE
      %th
        タスク名
      %th
        期限
  %tbody
    - @tasks.each do |task|
      %tr
        %td
          = task.state
        %td
          = task.task
        %td
          = task.limit_date
        %td
          = link_to '編集', edit_task_path(task)
          = link_to '削除', task_path(task), method: :delete
= link_to '追加', new_task_path
